<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--For the image button style-->
    <style name="img_btn">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="tint">@color/design_default_color_primary</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="img_btn2">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="tint">@color/design_default_color_primary</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!--For the product card-->
    <style name="card_product">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/CustomShape</item>
    </style>

    <style name="CustomShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>